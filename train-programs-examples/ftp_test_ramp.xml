    </row>
    <row duration="00:01:00" power="380" cadence="90">
        <textevent timeoffset="0" message="Final push! Don't give up now!"/>
    </row>
    <row duration="00:01:00" power="400" cadence="90">
        <textevent timeoffset="0" message="Maximum effort! Hold on as long as you can!"/>
    </row>

    <!-- Cooldown - 5 minutes easy recovery -->
    <row duration="00:05:00" power="80" cadence="70">
        <textevent timeoffset="0" message="Great job! Time to recover. Easy spin for 5 minutes."/>
        <textevent timeoffset="120" message="Well done on completing the test! Your FTP will be calculated."/>
    </row>
