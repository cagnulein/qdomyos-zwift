    <row duration="00:01:00" power="120" cadence="90">
        <textevent timeoffset="0" message="Starting the ramp test! Keep your cadence above 85 rpm."/>
    </row>
    <row duration="00:01:00" power="140" cadence="90">
        <textevent timeoffset="0" message="Feeling good! Maintain that rhythm."/>
    </row>
    <row duration="00:01:00" power="160" cadence="90"/>
    <row duration="00:01:00" power="180" cadence="90">
        <textevent timeoffset="0" message="Power increasing - stay focused on your breathing."/>
    </row>
    <row duration="00:01:00" power="200" cadence="90"/>
    <row duration="00:01:00" power="220" cadence="90">
        <textevent timeoffset="0" message="You're doing great! Keep pushing."/>
    </row>
    <row duration="00:01:00" power="240" cadence="90"/>
    <row duration="00:01:00" power="260" cadence="90">
        <textevent timeoffset="0" message="Halfway there! Don't let your cadence drop."/>
    </row>
    <row duration="00:01:00" power="280" cadence="90"/>
    <row duration="00:01:00" power="300" cadence="90">
        <textevent timeoffset="0" message="Getting tough now - stay strong!"/>
    </row>
    <row duration="00:01:00" power="320" cadence="90">
        <textevent timeoffset="0" message="Keep that cadence up! You can do this!"/>
    </row>
    <row duration="00:01:00" power="340" cadence="90">
